<script>
    const UART_SERVICE_UUID = 'e95d93af-251d-470a-a062-fa1922dfa9a8';
    const UART_TX_CHARACTERISTIC_UUID = 'e95d7140-251d-470a-a062-fa1922dfa9a8';

    async function onConnectClick() {
        try {
            // ‡πÉ‡∏ä‡πâ‡∏ä‡∏∑‡πà‡∏≠‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤
            const device = await navigator.bluetooth.requestDevice({
                filters: [{ namePrefix: 'BBC micro:bit [vivig]' }], 
                optionalServices: [UART_SERVICE_UUID]
            });

            document.getElementById('status').innerText = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠...";
            const server = await device.gatt.connect();
            const service = await server.getPrimaryService(UART_SERVICE_UUID);
            const characteristic = await service.getCharacteristic(UART_TX_CHARACTERISTIC_UUID);

            await characteristic.startNotifications();
            document.getElementById('status').innerText = "‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏£‡∏±‡∏ö‡∏™‡∏±‡∏ç‡∏ç‡∏≤‡∏ì";
            document.getElementById('status').style.color = "green";

            characteristic.addEventListener('characteristicvaluechanged', handleNotifications);
        } catch (error) {
            // ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÑ‡∏ß‡∏¢‡∏≤‡∏Å‡∏£‡∏ì‡πå JavaScript ‡∏à‡∏≤‡∏Å‡πÇ‡∏Ñ‡πâ‡∏î‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡πÉ‡∏´‡πâ‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î
            alert("‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠: " + error); 
            console.error(error);
        }
    }

    function handleNotifications(event) {
        let value = new TextDecoder().decode(event.target.value);
        console.log("Received Data: ", value);

        // ‡∏î‡∏±‡∏Å‡∏à‡∏±‡∏ö‡∏Ñ‡πà‡∏≤ "ten:0" ‡∏ó‡∏µ‡πà‡∏™‡πà‡∏á‡∏°‡∏≤‡∏à‡∏≤‡∏Å micro:bit
        if (value.includes("ten")) {
            showEmergency();
        }
    }

    function showEmergency() {
        document.getElementById('emergency').style.display = 'block';
        if ('vibrate' in navigator) {
            navigator.vibrate([500, 200, 500, 200, 500]); // ‡∏™‡∏±‡πà‡∏ô‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡∏Ñ‡∏£‡∏π
        }
        // ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç URL ‡πÄ‡∏™‡∏µ‡∏¢‡∏á‡πÉ‡∏´‡πâ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á
        let audio = new Audio('https://actions.google.com');
        audio.play();
    }

    function resetAlert() {
        document.getElementById('emergency').style.display = 'none';
    }
</script>

